{namespace static}

/**
 * This template will be rendered by SoyWeb when the user loads static.soy.
 * It deliberately includes dummy data so the designer can get a feel for how
 * the task list will appear with real data rather with minimal copy and paste.
 */
{template .soyweb}
{call main.page}
  {param content kind="html"}
    {call components.avatarPhoto}{/call}
    {call components.avatarInitials}{/call}
    {call components.avatarIcon}{/call}
    {call components.buttonTypes}{/call}
    {call components.buttonTags}{/call}
    {call components.formInput}{/call}
    {call components.formSelect}{/call}
    {call components.formTextarea}{/call}
    {call components.modal}{/call}
    {call components.navPrimary}{/call}
    {call components.navSecondary}{/call}
    {call components.shadow}{/call}
    {call components.tooltip}{/call}
    {call components.tooltipMenu}{/call}
  {/param}
{/call}
{/template}

/**
 * @param title
 * @param description
 * @param html
 * @param snippet
 */
{template .cell}
  <div class="page-cell shadow-z1">
    <h3 class="page-cell-title">{$title}</h3>
    <p class="page-cell-description">{$description}</p>
    <div class="page-cell-demo">
      {$html}
    </div>
    <pre class="page-cell-pre"><code class="page-cell-code">{$snippet}</code></pre>
  </div>
{/template}
