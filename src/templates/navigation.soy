{namespace components}

/**
 * Navigation 路 Top
 */
{template .navTop}
  {let $title: 'Navigation 路 Top' /}
  {let $description: 'This is how users navigate through the application.' /}
  {let $html kind="html"}
{literal}<nav class="nav-top">
  <ul class="nav-top-list">
    <li class="nav-top-item">
      <a class="nav-top-link" href="#">
        <img class="nav-top-logo" src="docs/images/nav-logo.svg" width="19" height="19" alt="Logo">
      </a>
    </li>
    <li class="nav-top-item">
      <a class="nav-top-link nav-top-link-selected" href="#">My Apps</a>
    </li>
    <li class="nav-top-item">
      <a class="nav-top-link" href="#">Tutorials</a>
    </li>
    <li class="nav-top-item">
      <a class="nav-top-link" href="#">Documentation</a>
    </li>
    <li class="nav-top-item u-pull-right">
      <a class="nav-top-link" href="#">
        <img class="avatar" src="docs/images/avatar-person-1.png" width="36" height="36" alt="Zeno Rocha">
      </a>
    </li>
  </ul>
</nav>{/literal}
  {/let}
  {let $snippet kind="text"}{$html}{/let}
  {call static.cell}
    {param title: $title /}
    {param description: $description /}
    {param snippet: $snippet /}
    {param html: $html /}
  {/call}
{/template}

